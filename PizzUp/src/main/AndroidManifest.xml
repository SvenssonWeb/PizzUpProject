<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.project.pizzup"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_icon"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >

        <!-- Splash Screen -->
        <activity
            android:name="com.project.pizzup.SplashScreen"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <!-- Main Activity -->
        <activity
            android:name="com.project.pizzup.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.project.pizzup.ResActivity"
            android:parentActivityName="MainActivity"
            android:label="@string/title_activity_res" >
        </activity>
        <activity
            android:name="com.project.pizzup.PizzaActivity"
            android:parentActivityName="ResActivity"
            android:label="@string/title_activity_pizza" >
        </activity>
        <activity
            android:name="com.project.pizzup.AdminMainActivity"
            android:label="@string/title_activity_admin_main" >
        </activity>
        <activity
            android:name="com.project.pizzup.AdminPizzaActivity"
            android:label="@string/title_activity_admin_pizza" >
        </activity>
        <activity
            android:name="com.project.pizzup.AdminPizzeriaActivity"
            android:label="@string/title_activity_admin_pizzeria" >
        </activity>
        <activity
            android:name="com.project.pizzup.IngredientAdminActivity"
            android:label="@string/title_activity_ingredient_admin" >
        </activity>
        <activity
            android:name="com.project.pizzup.FilterActivity"
            android:label="@string/title_activity_filter"
            android:parentActivityName="MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="MainActivity" />
        </activity>
    </application>

</manifest>
